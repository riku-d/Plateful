# Server Configuration
PORT=5000
NODE_ENV=development

# Database
MONGODB_URI=mongodb://localhost:27017/food-ranger

# JWT Secret
JWT_SECRET=your-super-secret-jwt-key-here

# Email Configuration (for notifications)
